# =========================================================
# CONFIGURAÇÕES DO DJANGO
# =========================================================

# Chave secreta do Django (OBRIGATÓRIO em produção)
# Gere uma nova chave com:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=

# Modo debug
# True / False ou 1 / 0
# Em produção: False
DJANGO_DEBUG=True

# Hosts permitidos (separados por vírgula)
# Desenvolvimento: localhost,127.0.0.1
# Produção: api.exemplo.com,exemplo.com
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1


# =========================================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# =========================================================

# --- SQLite (apenas desenvolvimento) ---
# Usado SOMENTE se as variáveis do PostgreSQL não estiverem definidas
DJANGO_DB_NAME=db.sqlite3


# =========================================================
# CONFIGURAÇÕES DO BANCO DE DADOS - POSTGRESQL (Docker / Produção)
# =========================================================

# Se TODAS as variáveis abaixo estiverem definidas,
# o sistema utilizará PostgreSQL automaticamente

# Nome do banco de dados PostgreSQL
POSTGRES_DB=

# Usuário do PostgreSQL
POSTGRES_USER=

# Senha do PostgreSQL
POSTGRES_PASSWORD=

# Host do PostgreSQL
# No Docker Compose, normalmente: db
POSTGRES_HOST=db

# Porta do PostgreSQL
POSTGRES_PORT=5432


# =========================================================
# CONFIGURAÇÕES DO SUPERUSER (Docker)
# =========================================================

# Criação automática de superuser ao subir o container
# (opcional — recomendado apenas para desenvolvimento ou primeiro deploy)

DJANGO_SUPERUSER_USERNAME=
DJANGO_SUPERUSER_PASSWORD=
DJANGO_SUPERUSER_EMAIL=admin@example.com


# =========================================================
# CONFIGURAÇÕES DO GLPI - API V2.1 (FUTURO)
# =========================================================

# URL base da API do GLPI v2.1
GLPI_API_URL=

# Token de autenticação da API v2.1
GLPI_API_TOKEN=

# URL base do GLPI (sem /apirest.php)
GLPI_BASE_URL=


# =========================================================
# CONFIGURAÇÕES DO GLPI - API LEGACY
# =========================================================

# URL da API Legacy do GLPI
# Pode conter ou não /apirest.php (o código detecta automaticamente)
# Exemplos:
#   http://glpi:80
#   http://glpi:80/apirest.php
GLPI_LEGACY_API_URL=

# Usuário da API Legacy
GLPI_LEGACY_API_USER=

# Senha da API Legacy
GLPI_LEGACY_API_PASSWORD=

# Token do aplicativo (se configurado no GLPI)
GLPI_LEGACY_APP_TOKEN=


# =========================================================
# CONFIGURAÇÕES DO N8N
# =========================================================

# URL do webhook n8n para integração com GLPI
# Exemplo:
# http://n8n:5678/webhook/glpi/survey-response
N8N_WEBHOOK_URL=


# =========================================================
# CONFIGURAÇÕES DE IA - GOOGLE GEMINI
# =========================================================

# Chave da API do Google Gemini
# Opcional: o sistema funciona sem IA, mas não retornará classificações
GEMINI_API_KEY=